# Docker Compose for All-At-Once Code Clone Detection
version: "3.8"

services:
  clone-detector:
    image: cljdetector
    container_name: clone-detector
    command: clear
    ports:
      - "8080:3000"
    volumes:
      - ./Containers/cljdetector:/usr/src/app
      - qc-volume:/QualitasCorpus
    environment:
      DBHOST: dbstorage
      SOURCEDIR: "/QualitasCorpus/QualitasCorpus-20130901r/Systems/eclipse_SDK"
      CHUNKSIZE: 20
    depends_on:
      - dbstorage

  dbstorage:
    image: mongo:5.0
    container_name: dbstorage
    restart: always
    command: --quiet --syslog
    ports:
      - "27017:27017"
    expose:
      - "27017"
    volumes:
      - dbstorage:/data/db
      - dbconfig:/data/configdb

  monitorTool:
    build:
      context: ./monitorTool
      dockerfile: Dockerfile
    container_name: monitor-tool
    image: bigdataanalytics-monitortool  # Nom corrig√©
    environment:
      DBHOST: dbstorage
    depends_on:
      - dbstorage

volumes:
  dbstorage:
  dbconfig:
  qc-volume:
    external: true
